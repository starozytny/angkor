{% extends 'themes/default/admin/layout/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('default_super_home') }}
{% endblock %}

{% block title %}Dashboard {{ parent() }}{% endblock %}

{% block main_content %}
    <h1>Dashboard</h1>

    <section class="dashboard">
        <div class="dashboard-line dashboard-line-0">
            <a href="{{ path('admin_contact_index') }}" class="card-dash-0">
                <div class="card-header">
                    <div class="number">
                        <span>{{ totalContacts }}</span> 
                    </div>
                    <div class="label">Demandes de contact</div>
                </div>
                <div class="card-footer">
                    <div class="card-illu card-illu-0">
                        <span class="icon-email"></span>
                    </div>
                </div>
            </a>
        </div>
    </section>
{% endblock %}